<% layout('layouts/boilerplate') -%>
<link rel="stylesheet" href="/stylesheets/starability-basic.css" />

<script src="https://cdn.tailwindcss.com"></script>
<script src="https://unpkg.com/flowbite@1.4.0/dist/flowbite.js"></script>

<div class="flex gap-x-4 mx-auto">
  <div
    class="rounded-md border border-slate-300 shadow-lg overflow-hidden self-start w-[50%]"
  >
    <div id="controls-carousel" class="relative w-full" data-carousel="slide">
      <!-- Carousel wrapper -->
      <div class="relative h-64">
        <!-- Items -->
        <% campground.images.forEach((img, i) => { if(campground.images.length
        === 1 ) {%>
        <img
          src="<%= img.url %>"
          class="aspect-video min-w-full object-cover"
          alt="..."
          crossorigin="anonymous"
        />
        <% } else { %>
        <div class="hidden duration-[700ms] ease-in-out" data-carousel-item>
          <img
            src="<%= img.url %>"
            class="aspect-video min-w-full object-cover"
            alt="..."
            crossorigin="anonymous"
          />
        </div>
        <% }}) %>
      </div>
      <%if(campground.images.length > 1) {%>
      <button
        type="button"
        class="absolute top-0 left-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none"
        data-carousel-prev
      >
        <span
          class="inline-flex items-center justify-center w-10 h-10 rounded-full"
        >
          <svg
            class="w-4 h-4 text-white"
            aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 6 10"
          >
            <path
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M5 1 1 5l4 4"
            />
          </svg>
          <span class="sr-only">Previous</span>
        </span>
      </button>
      <button
        type="button"
        class="absolute top-0 right-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none"
        data-carousel-next
      >
        <span
          class="inline-flex items-center justify-center w-10 h-10 rounded-full"
        >
          <svg
            class="w-4 h-4 text-white"
            aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 6 10"
          >
            <path
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="m1 9 4-4-4-4"
            />
          </svg>
          <span class="sr-only">Next</span>
        </span>
      </button>
      <% } %>
    </div>

    <div class="mt-6 px-4 py-2">
      <p class="font-semibold text-3xl"><%= campground.title %></p>
      <p class="text-sm"><%= campground.description %></p>
    </div>
    <div class="w-full border-b border-slate-300"></div>
    <p class="text-slate-400 px-4 py-2"><%= campground.location %></p>
    <div class="w-full border-b border-slate-300"></div>
    <p class="px-4 py-2">
      Submitted by <b><%= campground.author.username %></b>
    </p>
    <div class="w-full border-b border-slate-300"></div>
    <p class="font-medium px-4 py-2">$<%= campground.price %>/night</p>
    <div class="w-full border-b border-slate-300"></div>
    <% if(currentUser && campground.author.equals(currentUser)) { %>
    <div class="flex px-4 py-2 gap-x-2">
      <a
        href="/campgrounds/<%= campground._id %>/edit"
        class="bg-sky-600 px-2 py-1 text-white font-medium rounded-mds"
        >Edit</a
      >
      <form
        action="/campgrounds/<%= campground._id %>?_method=DELETE"
        method="POST"
      >
        <button
          type="submit"
          class="bg-red-600 px-2 py-1 text-white font-medium rounded-mds"
        >
          Delete
        </button>
      </form>
    </div>
    <% } %>
  </div>

  <div class="w-[50%]">
    <div id="map" class="w-full h-64 rounded-md border border-slate-300"></div>
    <% if(currentUser) { %>
    <h2 class="font-bold text-3xl mt-4">Leave a Review</h2>
    <form
      action="/campgrounds/<%= campground._id %>/reviews"
      method="POST"
      class="mt-2 flex flex-col group"
      novalidate
    >
      <fieldset class="starability-basic mb-2">
        <legend class="font-semibold mb-1">Rating:</legend>
        <input
          type="radio"
          id="no-rate"
          class="input-no-rate"
          name="review[rating]"
          value="1"
          checked
          aria-label="No rating."
        />
        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
        <label for="first-rate1" title="Terrible">1 star</label>
        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
        <label for="first-rate2" title="Not good">2 stars</label>
        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
        <label for="first-rate3" title="Average">3 stars</label>
        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
        <label for="first-rate4" title="Very good">4 stars</label>
        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
        <label for="first-rate5" title="Amazing">5 stars</label>
      </fieldset>
      <div>
        <label for="body" class="font-semibold block">Review</label>
        <textarea
          required
          name="review[body]"
          id="body"
          class="block w-full px-3 py-2 bg-white border border-slate-300 rounded -md text-sm shadow-sm placeholder-slate-400 focus:outline-none focus:border-sky-500 focus:ring-1 focus:ring-sky-500 disabled:bg-slate-50 disabled:text-slate-500 disabled:border-slate-200 disabled:shadow-none invalid:border-pink-500 invalid:text-pink-600 focus:invalid:border-pink-500 focus:invalid:ring-pink-500 transition ease-in 100ms peer"
        ></textarea>
        <span class="mt-2 hidden text-sm text-pink-600 peer-[&:invalid]:block">
          Description is required!
        </span>
      </div>
      <button
        class="mt-2 self-end bg-green-600 text-white rounded-md px-2 py-1 font-medium group-invalid:pointer-events-none group-invalid:opacity-30"
      >
        Submit
      </button>
    </form>
    <% } else { %>
    <p class="mt-2">
      <a href="/login" class="underline text-blue-800">Login</a>, to leave a
      review!
    </p>
    <% } %> <% for(let review of campground.reviews){ %>
    <div class="px-4 py-2 mt-3 border border-slate-300 rounded-md shadow-md">
      <div class="flex h-full items-center gap-x-4 mb-2">
        <p class="starability-result -z-10" data-rating="<%= review.rating %>">
          Rated: <%= review.rating %> stars
        </p>
        <p class="text-md font-semibold text-gray-400">
          <%= review.relativeTime %>
        </p>
      </div>
      <p class="text-blue-600 text-xs opacity-75">
        @<%= review.author.username %>
      </p>
      <div class="flex w-full justify-between">
        <p><%= review.body %></p>
        <% if(currentUser && review.author.equals(currentUser._id)){ %>
        <form
          action="/campgrounds/<%= campground._id %>/reviews/<%= review._id %>?_method=DELETE"
          method="POST"
        >
          <button class="text-red-600 rounded-md font-medium">Delete</button>
        </form>
        <% } %>
      </div>
    </div>
    <% } %>
  </div>
</div>

<script>
  const mapToken = "<%-process.env.MAPBOX_TOKEN%>";
  const campground = <%-JSON.stringify(campground)%>;
</script>
<script src="/javascripts/showPageMap.js"></script>
